        </nav>
        <!-- MIS DATOS FÍSICOS-->
        <div class="container p-3">
            <h3 class="font-weight-bold mb-0"></h3>
            <div class="row">
                <div class="card mx-auto" style="width: 40rem;">
                    <div class="card-header">
                        <h3>Edit Ficha Física</h3>
                    </div>
                    <div class="card-body">
                        <form action="/fichaM/edit-fichaM/{{datosF.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="_method" value="PUT">
                            <div class="form-group">
                                Deporte:
                                <label for="deporteF"></label>
                                <select name="deporteF" id="deporteF" class="form-control">
                                    <option>{{datosF.deporteF}}</option>
                                    <option>Futbol</option>
                                    <option>Básquet</option>
                                    <option>Voley</option>
                                    <option>Natación</option>
                                    <option>Tenis</option>
                                    <option>Ninguno</option>
                                </select>
                            </div>

                            <div class="form-group">
                                Tipo Alimentación:
                                <label for="alimentacionF"></label>
                                <select name="alimentacionF" id="alimentacionF" class="form-control">
                                    <option>{{datosF.alimentacionF}}</option>
                                    <option>Balanceada</option>
                                    <option>Comida Chatarra</option>
                                    <option>No balanceada</option>
                                </select>
                            </div>
                            <div class="form-group">

                                <p>Cantidad de Horas de Sueño<input type="number" class="col-sm-4 form-control"
                                        name="horasSueñoF" placeholder="Horas de sueño" value="{{datosF.horasSueñoF}}">
                                </p>
                            </div>
                            <div class="form-group">
                                <p>Fecha de Examen Físico: <input type="date" class="col-sm-4 form-control"
                                        name="fechaExaF" id="fechaExaF" value="{{datosF.fechaExaF}}">
                                </p>
                            </div>
                            <div class="form-group">
                                <p>Peso(kg)<input type="number" class="col-sm-4 form-control" name="pesoF"
                                        placeholder="Peso(kg)" value="{{datosF.pesoF}}"></p>
                            </div>
                            <div class="form-group">
                                <p>Talla(metros)<input type="number" class="col-sm-4 form-control" name="tallaF"
                                        placeholder="Talla(metros)" value="{{datosF.tallaF}}"></p>
                            </div>
                            <div class="form-group">
                                <p>Grasa Corporal(kg)<input type="number" class="col-sm-4 form-control"
                                        name="grasaCorporalF" placeholder="Grasa Corporal(kg)"
                                        value="{{datosF.grasaCorporalF}}"></p>
                            </div>

                            <div class="form-group">
                                <p>Masa Magra(kg)<input type="number" class="col-sm-4 form-control" name="masaMagraF"
                                        placeholder="Masa Magra(kg)" value="{{datosF.masaMagraF}}"></p>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" type="submit">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>