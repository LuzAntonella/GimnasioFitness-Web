<div class="d-flex" id="sidebarUsuario">
    <div id="sidebar-container" class="bg-primary">
        <div class="logo">
            <h4 class=" text-light text-center ">USUARIO</h4>
        </div>
        <div class="menu">
            <a href="/panelUsu" class="d-block  text-light p-3"><i class="icon ion-md-apps mr-2 lead"></i>Cursos</a>
            <a href="/misDatosFisicos" class="d-block  text-light p-3"><i
                    class="icon ion-md-clipboard mr-2 lead"></i>Datos
                Físicos</a>
            <a href="/misCursos" class="d-block  text-light p-3"><i class="icon ion-md-folder mr-2 lead"></i>Mis
                Cursos</a>
            <a href="/miPerfil" class="d-block  text-light p-3"><i class="icon ion-md-person mr-2 lead"></i>Perfil</a>
            <a href="#" class="d-block  text-light p-3"><i class="icon ion-md-cash mr-2 lead"></i>Pagos</a>
        </div>
    </div>
    <div class="w-100">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <form class="form-inline position-relative my-2 d-inline-block">
                    <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search">
                    <button class="btn btn-search position-absolute" type="submit"><i
                            class="icon ion-md-search"></i></button>
                </form>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            {{#each user}}
                            <img src="{{ imageURL }}" class="img-fluid rounded-circle avatar mr-2">
                            {{ name }}
                            {{/each}}
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
        <!-- MIS CURSOS -->
        <div id="content">
            <section class="py-3">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-9">
                            <h3 class="font-weight-bold mb-0">MIS CURSOS</h3>
                        </div>
                    </div>
                </div>
            </section>

            <div class="container p-3">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table id="tablaCursos" class="table table-striped table-bordered table-condensed "
                                style="width: 100%;">
                                <thead class="text-center">
                                    <tr>
                                        <th>Código</th>
                                        <th>Nombre</th>
                                        <th>Descripción</th>
                                        <th>Docente</th>
                                        <th>Costo</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                {{#each matriculaCur }}

                                <body>
                                    <tr>
                                        <td>{{ codigoCurso }}</td>
                                        <td>{{ nameCurso }}</td>
                                        <td>{{ descripcionCurso }}</td>
                                        <td>{{ docenteCurso }}</td>
                                        <td>{{ costoCurso }}</td>
                                        <td>{{ realizoPago }}</td>
                                        <td>
                                            <div class="col text-center"><button
                                                    class="btn btn-danger btnEliminar btn-sm" type="submit">
                                                    Pagar
                                                </button></div>
                                        </td>
                                    </tr>
                                </body>
                                {{/each}}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>