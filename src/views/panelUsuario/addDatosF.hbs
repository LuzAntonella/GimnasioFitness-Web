<div class="d-flex" id="sidebarUsuario">
    <div id="sidebar-container" class="bg-primary">
        <div class="logo">
            <h4 class=" text-light text-center ">USUARIO</h4>
        </div>
        <div class="menu">
            <a href="/panelUsu" class="d-block  text-light p-3"><i class="icon ion-md-apps mr-2 lead"></i>Cursos</a>
            <a href="/misDatosFisicos" class="d-block  text-light p-3"><i
                    class="icon ion-md-clipboard mr-2 lead"></i>Datos
                Físicos</a>
            <a href="/checkout" class="d-block  text-light p-3"><i class="icon ion-md-folder mr-2 lead"></i>Mis
                Cursos</a>
            <a href="/miPerfil" class="d-block  text-light p-3"><i class="icon ion-md-person mr-2 lead"></i>Perfil</a>
            <a href="/misPagos" class="d-block  text-light p-3"><i class="icon ion-md-cash mr-2 lead"></i>Pagar</a>
            <a href="/cursosPagados" class="d-block  text-light p-3"><i class="icon ion-md-cash mr-2 lead"></i>Registro
                Pagos</a>
        </div>
    </div>
    <div class="w-100">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <form class="form-inline position-relative my-2 d-inline-block">
                    <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search">
                    <button class="btn btn-search position-absolute" type="submit"><i
                            class="icon ion-md-search"></i></button>
                </form>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            {{#each user}}
                            <img src="{{ imageURL }}" class="img-fluid rounded-circle avatar mr-2">
                            {{ name }}
                            {{/each}}
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
        <!-- MI PERFIL DATOS-->
        <div class="container">
            <h3 class=" font-weight-bold mb-0 p-3"></h3>
            <div class="card mx-auto" style="width: 40rem;">
                <div class="card-header">
                    <h3>Ficha Física</h3>
                </div>
                <div class="card-body">
                    <form action="/addFicha" method="POST">
                        <div class="form-group">
                            Deporte:
                            <label for="deporteF"></label>
                            <select name="deporteF" id="deporteF" class="form-control">
                                <option>Futbol</option>
                                <option>Básquet</option>
                                <option>Voley</option>
                                <option>Natación</option>
                                <option>Tenis</option>
                                <option>Ninguno</option>
                            </select>
                        </div>

                        <div class="form-group">
                            Tipo Alimentación:
                            <label for="alimentacionF"></label>
                            <select name="alimentacionF" id="alimentacionF" class="form-control">
                                <option>Balanceada</option>
                                <option>Comida Chatarra</option>
                                <option>No balanceada</option>
                            </select>
                        </div>
                        <div class="form-group">

                            <input type="number" class="form-control" name="horasSueñoF" placeholder="Horas de sueño">
                        </div>
                        <div class="form-group">
                            <p>Fecha de Examen Físico: <input type="date" class="form-control" name="fechaExaF"
                                    id="fechaExaF">
                            </p>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="pesoF" placeholder="Peso(kg)">
                        </div>
                        <div class="form-group">
                            <input type="number" class=" form-control" name="tallaF" placeholder="Talla(cm)">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="grasaCorporalF"
                                placeholder="Grasa Corporal(kg)">
                        </div>

                        <div class="form-group">
                            <input type="number" class="form-control" name="masaMagraF" placeholder="Masa Magra(kg)">
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">
                                Save
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>