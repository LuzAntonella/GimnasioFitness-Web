<div class="d-flex" id="sidebarUsuario">
    <div id="sidebar-container" class="bg-primary">
        <div class="logo">
            <h4 class=" text-light text-center "> Usuario</h4>
        </div>
        <div class="menu">
            <a href="/moduloU" class="d-block  text-light p-3"><i class="icon ion-md-apps mr-2 lead"></i>Tablero</a>
            <a href="/usuariosAdmin" class="d-block  text-light p-3"><i
                    class="icon ion-md-contacts mr-2 lead"></i>Usuarios</a>
            <a href="/docentesAdmin" class="d-block  text-light p-3"><i
                    class="icon ion-md-people mr-2 lead"></i>Docentes</a>
            <a href="/cursosAdmin" class="d-block  text-light p-3"><i
                    class="icon ion-md-folder mr-2 lead"></i>Cursos</a>
            <a href="/perfilU" class="d-block  text-light p-3"><i class="icon ion-md-person mr-2 lead"></i>Perfil</a>

        </div>
    </div>
    <div class="w-100">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <form class="form-inline position-relative my-2 d-inline-block">
                    <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search">
                    <button class="btn btn-search position-absolute" type="submit"><i
                            class="icon ion-md-search"></i></button>
                </form>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            {{#each user}}
                            <img src="{{ imageURL }}" class="img-fluid rounded-circle avatar mr-2">
                            {{ name }}
                            {{/each}}
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
        <!-- MIS DATOS FÍSICOS-->
        <div class="container p-3">
            <h3 class="font-weight-bold mb-0"> EDIT DOCENTE</h3>

            <div class="card mx-auto" style="width: 30rem;">
                <div class="card-header">
                    <h3>Edit Docente</h3>
                </div>
                <div class="card-body">
                    <form action="/docente/edit-docente/{{datosF.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text" class="form-control" name="dni" placeholder="Documento Identidad"
                                value="{{datosF.dni}}">
                        </div>
                        <div class="form-group">

                            <input type="text" class="form-control" name="name" placeholder="Nombre"
                                value="{{datosF.name}}">
                        </div>
                        <div class="form-group">

                            <input type="text" class="form-control" name="apellido" placeholder="Apellido"
                                value="{{datosF.apellido}}">
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3"
                                class="col-sm-3 col-form-label lead text-muted font-weight-bold">Género</label>
                            <div class="row-sm-10">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="genero" value="femenino" checked>
                                    <label class="form-check-label" for="genero">
                                        Femenino
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="genero" value="masculino">
                                    <label class="form-check-label" for="genero">
                                        Masculino
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="telefono" placeholder="Teléfono"
                                value="{{datosF.telefono}}">
                        </div>
                        <div class="form-group">

                            <input type="email" class="form-control" name="email" placeholder="Correo"
                                value="{{datosF.email}}">
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3"
                                class="col-sm-6 col-form-label lead text-muted font-weight-bold">Profesión</label>
                            <select class="col-sm-5 form-control" name="profesion">
                                <option selected>{{datosF.profesion}}</option>
                                <option value="bailarin">Bailarin</option>
                                <option value="nutricionista">Nutricionista</option>
                            </select>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3"
                                class="col-sm-5 col-form-label lead text-muted font-weight-bold">Fecha
                                Nacimiento</label>
                            <div class="col-sm-7">
                                <input type="date" class="form-control" name="fechaNacimiento"
                                    value="{{datosF.fechaNacimiento}}">
                            </div>
                        </div>
                        <div style="visibility: hidden">
                            <input type="text" class="form-control" name="imageURL" value="{{datosF.imageURL}}">
                            <input type="text" class="form-control" name="public_id" value="{{datosF.public_id}}">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">
                                Save
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
</div>