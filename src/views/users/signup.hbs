<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" class="form-control" name="dni" placeholder="DNI">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="apellido" placeholder="Apellido"
                            value="{{apellido}}">
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3"
                            class="col-sm-3 col-form-label lead text-muted font-weight-bold">Género</label>
                        <div class="row-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="genero" value="femenino" checked>
                                <label class="form-check-label" for="genero">
                                    Femenino
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="genero" value="masculino">
                                <label class="form-check-label" for="genero">
                                    Masculino
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="telefono" placeholder="Teléfono"
                            value="{{telefono}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-5 col-form-label lead text-muted font-weight-bold">Fecha
                            Nacimiento</label>
                        <div class="col-sm-7">
                            <input type="date" class="form-control" name="fechaNacimiento" placeholder="Email">
                        </div>
                    </div>
                    <div class=" form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password"
                            value="{{password}}">
                    </div>
                    <div class=" form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Password"
                            value="{{confirm_password}}">
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01" class="custom-file-label">Foto Perfil</label>
                        </div>
                    </div>
                    <div class=" form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            SignUp
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>